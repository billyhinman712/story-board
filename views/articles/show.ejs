<div class='row'>
	<div class='col s4 light-green accent-3'>
		<h5>Search tags</h5>
		<input type='text' placeholder='tags'>
		<input type="submit" value="Search" class="btn">
		<hr>
		<ul>
		<% if(article.tags && article.tags.length > 0){ %>
		<% article.tags.forEach(function(t){ %>
			<li>
				#<%=t.name%>
			</li>
		<% }); %>
	<% } else { %>
			<p>No tags yet</p>
		<% } %>
		</ul>
	</div>
	<div class='col s8'>
		<div class='container'>
			<h3> <%= article.title %> </h3>
			<br>
			<h4> <%= article.user.firstname %> <%= article.user.lastname %></h4>
		</div>
		<div class='container'>
			<p> <%= article.content %> </p>
		</div>
	</div>
</div>